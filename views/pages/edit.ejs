<h1><%= title %></h1>

<form action="/contact/<%= data._id %>" method="post">

    <div class="form-group">
        <label for="exampleInputEmail1">Nome</label>
        <input type="text" class="form-control" name='nome' value="<%= data.nome %>">
    </div>
    <div class="form-group">
        <label for="exampleInputPassword1">Idade</label>
        <input type="text" class="form-control" name='idade' value="<%= data.idade %>">
    </div>
    <button type="submit" class="btn btn-primary">Enviar</button>
</form>

<hr>

<p><a href="/contact" class='btn btn-danger'>Voltar</a></p>
