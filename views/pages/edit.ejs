<h1><%= title %></h1>

<div class="row">
    <div class="col-6">
        <div class="bg-secondary p-2">
            <form action="/contact/<%= data.id %>" method="post">
                <div class="form-group">
                    <label for="exampleInputEmail1">Nome</label>
                    <input type="text" class="form-control" name='nome' value="<%= data.nome %>">
                </div>
                <div class="form-group">
                    <label for="exampleInputPassword1">Idade</label>
                    <input type="text" class="form-control" name='idade' value="<%= data.idade %>">
                </div>
                <button type="submit" class="btn btn-primary">Enviar</button>
            </form>
        </div>
    </div>
</div>

<hr>

<p><a href="/contact" class='btn btn-danger'>Voltar</a></p>
